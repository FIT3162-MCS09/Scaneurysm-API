{
    "family": "MCS09-TaskDefinition",
    "containerDefinitions": [
        {
            "name": "mcs09",
            "image": "522814726499.dkr.ecr.ap-southeast-1.amazonaws.com/mcs09/webapp:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "PYTHONUNBUFFERED",
                    "value": "1"
                }
            ],
            "command": ["python", "src/manage.py", "runserver", "0.0.0.0:8000"],
            "workingDirectory": "/app",
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/MCS09-TaskDefinition",
                    "awslogs-region": "ap-southeast-1",
                    "awslogs-stream-prefix": "ecs",
                    "awslogs-create-group": "true"
                }
            },
            "mountPoints": [],
            "volumesFrom": [],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "python -c \"import http.client; conn = http.client.HTTPConnection('localhost', 8000); conn.request('GET', '/'); response = conn.getresponse(); exit(0) if response.status == 200 else exit(1)\""
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ],
    "executionRoleArn": "arn:aws:iam::522814726499:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "volumes": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "3072",
    "tags": [
        {
            "key": "Environment",
            "value": "Production"
        }
    ]
}